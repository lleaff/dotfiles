#==========================================
EMACSL="/opt/emacs24/bin/emacs"
if [[ ! -e $EMACSL ]]; then
	EMACSL=$(whereis emacs | cut -d ' ' -f 2)
fi
alias emacsd="$EMACSL --daemon"
alias emacsk="${EMACSL}client -e '(kill-emacs)'"
alias emacsr="emacsk; emacsd"
